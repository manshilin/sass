<div class="page">

  <div class="section header">
    {{#with header}}
    <div class="section__content">
      <header class="header__container">
        <div class="header__block">
          <img src="/svg/apple.svg" alt="Apple" class="header__icon">
          <nav class="header__block">
            {{#each links}}
            <a href="{{url}}" class="header__link">{{text}}</a>
            {{/each}}
          </nav>
        </div>
        <div class="header__block">
          <img src="/svg/search.svg" alt="Search" class="header__icon">
          <img src="/svg/profile.svg" alt="Profile" class="header__icon">
        </div>
      </header>
    </div>
  </div>
  <div class="section ad">
    <div class="section__content">
      {{#with ad}}
      <div class="ad__container">
        <div class="ad__block">
          <h1 class="ad__title">{{title}}</h1>
        </div>
        <div class="ad__block product__link">
          <a href="{{link.url}}">{{link.text}}</a>
        </div>
      </div>
      {{/with}}
    </div>
  </div>

  {{/with}}

  {{#with iphone_pro}}
